# ReadPilot Backend - MVP Development Environment
# 复制此文件为 .env 并填入实际配置

# ===== 应用配置 =====
APP_NAME=ReadPilot
APP_VERSION=0.1.0
DEBUG=True

# ===== API 配置 =====
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# ===== 数据库配置 =====
# PostgreSQL (推荐 - 支持 pgvector 向量搜索)
DATABASE_URL=postgresql+asyncpg://YOUR_USERNAME@localhost:5432/readpilot

# 如果使用 SQLite (快速测试，不支持向量搜索)
# DATABASE_URL=sqlite+aiosqlite:///./readpilot.db

# ===== LLM 配置 =====
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
DEFAULT_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small

# ===== 文档处理配置 =====
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=[".pdf",".txt",".md",".docx"]
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===== 对话配置 =====
MAX_CONVERSATION_HISTORY=10
MAX_CONTEXT_LENGTH=8000

# ===== JWT 认证 =====
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ===== 可选功能 (MVP阶段暂不需要) =====
# Redis 缓存
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# Parlant Multi-Agent (待实现)
# PARLANT_SERVER_HOST=localhost
# PARLANT_SERVER_PORT=8080
