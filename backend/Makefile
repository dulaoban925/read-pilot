db-migrate:
	@echo "ğŸ—„ï¸  åˆ›å»ºæ•°æ®åº“è¿ç§»..."
	@read -p "è¿ç§»æ¶ˆæ¯: " message; \
	alembic revision --autogenerate -m "$$message"

db-upgrade:
	@echo "â¬†ï¸  åº”ç”¨æ•°æ®åº“è¿ç§»..."
	alembic upgrade head

db-downgrade:
	@echo "â¬‡ï¸  å›æ»šæ•°æ®åº“è¿ç§»..."
	alembic downgrade -1

